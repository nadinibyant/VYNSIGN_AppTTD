      </div>
      <div class="form-floating mb-2">
        <input type="password" class="form-control" id="floatingPassword" placeholder="password" name="password">
        <label for="floatingPassword">Password</label>
      </div>
      <div class="form-floating mb-2">
        <input type="number" class="form-control" id="floatingInputNik" name="nik" placeholder="nik">
        <label for="floatingInputNik">NIK</label>
      </div>
      <div class="form-floating mb-2">
        <input type="text" class="form-control" id="floatingInputInstituteName" name="institute_name"
          placeholder="institute_name">
        <label for="floatingInputInstituteName">Institute Name</label>
      </div>
      <div class="form-floating mb-2">
        <input type="text" class="form-control" id="floatingInputCity" name="city" placeholder="city">
        <label for="floatingInputCity">City</label>
      </div>
      <div class="mb-3">
        <label for="floatingInputSignImg" class="signimg mb-2 fw-normal ps-5">Sign Image (PNG)</label>
        <input type="file" class="form-control" id="floatingInputSignImg" placeholder="sign image" name="file">
      </div>


      <button class="w-100 btn btn-lg btn-submit text-white btn-light" id="signup-form" type="submit">Sign Up</button>
      <p class="mt-3 mb-3">Have an Account? <a href="/signin"
          class="text-decoration-none text-dark"><span class="fw-semibold">Sign In</span></a></p>
    </form>
  </main>


  <script>
    const form = document.querySelector('form');
    form.addEventListener('submit', async (event) => {
      event.preventDefault(); 

      const formData = new FormData(form);
      const response = await fetch('/signup', {
        method: 'POST',
        body: formData
      });

      const data = await response.json();
      
      if (data.statuss == true) {
        alert(data.message);
        window.location.href = '/signin';
      } else if(data.statuss == false){
        alert(data.message);
        window.location.href = '/signup';
      } else if(data.statuss == 'emailSalah'){
        alert(data.message);
        window.location.href = '/signup';
      } else if (data.statuss == 'usernameKurang'){
        alert(data.message);
      } else if(data.success == 'gagal'){
        alert(data.message)
      }
    });
  </script>

